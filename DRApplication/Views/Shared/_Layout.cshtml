﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Department of Corrections</title>

    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <link type="text/css" rel="stylesheet" href="~/Content/layout.css" media="screen" />
    <link type="text/css" rel="stylesheet" href="~/Content/ie.css" media="screen" />

   
    <meta name="viewport" content="width=device-width" />

</head>
<body>
    <header id="header">
        <hgroup>
            <h1 class="site_title"><a href="index.html"></a>Department of Corrections</h1>
            <h2 class="section_title"> Disciplinary Report Application</h2>
            <div class="btn_view_site"><a href="#">Home</a></div>
        </hgroup>
    </header> <!-- end of header bar -->

    <section id="secondary_bar">
        <div class="user">
            <p>@Html.Partial("_LoginPartial") </p>

        </div>




        <div class="breadcrumbs_container">
            <article class="breadcrumbs">
                <a href="Home/Index.cshtml">DR Application</a> <div class="breadcrumb_divider"></div>
                <a class="current">Dashboard</a>
            </article>
        </div>
    </section><!-- end of secondary bar -->






    <aside id="sidebar">
        <form class="quick_search">
            <input type="text" value="" onfocus="if(!this._haschanged){this.value=''};this._haschanged=true;">
        </form>
        <hr />
        <h3>Content</h3>
        <ul class="toggle">
            <li class="icn_new_article">@Html.ActionLink("New Report", "Form1a", "Form")</li>
            <li class="icn_edit_article">@Html.ActionLink("Edit Report", "Index", "Home")</li>
            <li class="icn_categories">@Html.ActionLink("Reports", "Index", "Home")</li>
        </ul>

            @if (Request.IsAuthenticated)
            {
                if (User.IsInRole("Chief"))
                {
                    
        <h3>Admin</h3>
        <ul class="toggle">
            
            <li class="icn_add_user">@Html.ActionLink("Add  New User", "Index", "Home")</li>
            <li class="icn_view_users">@Html.ActionLink("View Users", "Index", "Home")</li>
            <li class="icn_profile">@Html.ActionLink("Your Profile", "Index", "Home")</li>
            <li class="icn_settings">@Html.ActionLink("Options", "Index", "Home")</li>
            <li class="icn_security">@Html.ActionLink("Security", "Index", "Home")</li>
            <li class="icn_jump_back">@Html.ActionLink("Logout", "Index", "Home")</li>
        </ul>
            
            }
                if (User.IsInRole("Officer,Chief"))
            {
                    
        <h3>Officer</h3>
        <ul class="toggle">
            
            <li class="icn_profile">@Html.ActionLink("Your Profile", "Index", "Home")</li>
            <li class="icn_settings">@Html.ActionLink("Options", "Index", "Home")</li>
            <li class="icn_security">@Html.ActionLink("Security", "Index", "Home")</li>
            <li class="icn_jump_back">@Html.ActionLink("Logout", "Index", "Home")</li>                    
                     
          </ul>
            }
            
            //}
            //else 
            //{
            //    //return RedirectTAction("Login", "Account");
            //        FormsAuthentication.RedirectToLoginPage();
            //    }
           }    





        <footer>
            <hr />
            <p><strong>&copy; @DateTime.Now.Year - VividDesign Solutions</strong></p>
            <p></p>
        </footer>
    </aside><!-- end of sidebar -->


    <div id="main" class="column">
          @RenderSection("featured", required: false)
            <section style="flex-align:baseline">
                @RenderBody()
            </section>
   </div>



    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

</html>

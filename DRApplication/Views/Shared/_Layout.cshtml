    <aside id="sidebar">
        <form class="quick_search">
            <input type="text" value="" onfocus="if(!this._haschanged){this.value=''};this._haschanged=true;">
        </form>
        <hr />
        <h3>Content</h3>
        <ul class="toggle">
            <li class="icn_new_article">@Html.ActionLink("New Report", "Form1a", "Form")</li>
            <li class="icn_edit_article">@Html.ActionLink("Edit Report", "Index", "Home")</li>
            <li class="icn_categories">@Html.ActionLink("Reports", "Index", "Home")</li>
        </ul>
        <h3>Admin</h3>
        <ul class="toggle">
            <li class="icn_add_user">@Html.ActionLink("Add  New User", "Index", "Home")</li>
            <li class="icn_view_users">@Html.ActionLink("View Users", "Index", "Home")</li>
            <li class="icn_profile">@Html.ActionLink("Your Profile", "Index", "Home")</li>
            <li class="icn_settings">@Html.ActionLink("Options", "Index", "Home")</li>
            <li class="icn_security">@Html.ActionLink("Security", "Index", "Home")</li>
            <li class="icn_jump_back">@Html.ActionLink("Logout", "Index", "Home")</li>
        </ul>

        <footer>
            <hr />
            <p><strong>&copy; @DateTime.Now.Year - VividDesign Solutions</strong></p>
            <p></p>
        </footer>
    </aside><!-- end of sidebar -->


    <div id="body">
        @RenderSection("featured", required: false)

        <section id="main" class="column">
            @RenderBody()
        </section>
    </div>



    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>

